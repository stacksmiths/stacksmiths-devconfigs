{
  "name": "Python",
  "features": {
    "python": {
      "version": "3"
    }
  },
  "postCreateCommand": "./postCreate.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
